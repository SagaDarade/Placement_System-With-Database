<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudentInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/label_agent"
            android:text="STUDENT INFO"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/colorHead"
            android:gravity="center_horizontal" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorView"
        android:layout_below="@id/label_agent"
        android:id="@+id/view1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/scroll1"
            android:background="#602B608A"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:id="@+id/sa"
                >


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_name"
                    android:hint="Name"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_name"
                    android:drawablePadding="10dp"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_addrs"
                    android:hint="Address"
                    android:layout_below="@id/ed_name"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_address"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_birth"
                    android:hint="Birth Date"
                    android:inputType="date"
                    android:layout_below="@id/ed_addrs"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_date_init"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_contact"
                    android:hint="Contact"
                    android:layout_below="@id/ed_birth"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_call_black"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_contact2"
                    android:hint="Alternative Contact"
                    android:layout_below="@id/ed_contact"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_call_black"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_gender"
                    android:hint="Gender"
                    android:layout_below="@id/ed_contact2"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_name"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_hsc"
                    android:hint="Hsc Percent"
                    android:layout_below="@id/ed_gender"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_call_black"
                    android:drawablePadding="10dp"
                    android:maxLength="12"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_ssc"
                    android:hint="SSC Percent  ."
                    android:layout_below="@id/ed_hsc"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/ic_call_black"
                    android:drawablePadding="10dp"
                    android:maxLength="12"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_degree"
                    android:hint="Graduation Percent"
                    android:layout_below="@id/ed_ssc"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:inputType="date"
                    android:drawableLeft="@drawable/ic_date_init"
                    android:drawablePadding="10dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ed_pg"
                    android:hint="To Post Graduation percent"
                    android:layout_below="@id/ed_degree"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:inputType="date"
                    android:drawableLeft="@drawable/ic_date_init"
                    android:drawablePadding="10dp"
                    />

            </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/btn_insert"
                android:layout_weight="1"
                android:text="SAVE"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/btn_show"
                android:layout_weight="1"
                android:text="SHOW ALL"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/btn_clear"
                android:layout_weight="1"
                android:text="CLEAR"
                android:onClick="onClear"
                tools:ignore="OnClick" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>